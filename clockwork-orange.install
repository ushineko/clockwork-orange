pre_remove() {
	echo "Stopping clockwork-orange processes..."
	# Kill any running instances of the service/app
	pkill -f 'clockwork-orange' || true
}

post_install() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	update-desktop-database -q
}

post_upgrade() {
	post_install
}

post_remove() {
	echo "NOTE: User services were not disabled automatically."
	echo "Run 'systemctl --user daemon-reload' to update systemd configuration."
	post_install
}
